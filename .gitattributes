# Auto detect text files and perform LF normalization
* text=auto

# Source code - use LF
*.cs text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Shell scripts - must use LF
*.sh text eol=lf

# Windows batch files - must use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.dll binary
*.exe binary
*.so binary
*.png binary
*.jpg binary
*.ico binary

# Visual Studio files
*.vcxproj text eol=crlf
*.vcxproj.filters text eol=crlf
